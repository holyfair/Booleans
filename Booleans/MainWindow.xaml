<controls:MetroWindow x:Class="Booleans.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:loadin="clr-namespace:LoadingIndicators.WPF;assembly=LoadingIndicators.WPF"
                      xmlns:fa="http://schemas.fontawesome.io/icons/"
                      Title="AIM" Background="#ffffcc"
        ResizeMode="CanResizeWithGrip" WindowState="Maximized">
    <Grid>
        <ContentControl Name="_contentControl" IsEnabled="{Binding IsControlEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></ContentControl>
        <loadin:LoadingIndicator Style="{DynamicResource LoadingIndicatorFlipPlaneStyleKey}" Height="100" Width="100" Visibility="{Binding LoaderVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</controls:MetroWindow>
